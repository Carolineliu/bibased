{{!< default}}
{{#contentFor 'adminPageStyles'}}
  <link rel="stylesheet" href="../css/admin/notice_manager.css">
  <script type="text/javascript" src="../js/admin/notice_manager.js"></script>
{{/contentFor}}


<div class="noticeManager">
  <div class="noticeManagerHeader">
    <span>公告管理</span>
  </div>

  <div class="noticeTableHeader">
    <i class="icon-comments"></i> 公告列表
    <a href="#" class="tools delete">
      <i class="icon-trash"></i>删除
    </a>
    <a href="kindeditor" class="tools">
      <i class="icon-edit"></i>增加
    </a>
    <div class="tools settingNotice">
      <a href="#" class="noticeSetting" data-toggle="dropdown">
        <i class="icon-cogs"></i>设置
        <i class="icon-angle-down"></i>
      </a>
      <ul class="dropdown-menu pull-right">
        <li><a href="#" class="becomeHome"><i class="icon-cogs"></i> 设置成为首页</a></li>
        <li><a href="#" class="becomeNotice"><i class="icon-cogs"></i> 设置成为公告页</a></li>
      </ul>
    </div>
  </div>

  <div class="noticeTableContent">
    <table>
      <thead>
        <tr>
          <th>
            <input type="checkbox" id="allSelect">
          </th>
          <th data-name="noticeId">公告编号</th>
          <th data-name="noticeTitle">公告标题</th>
          <th data-name="state">状态</th>
          <th data-name="noticeContent">查看内容</th>
        </tr>
      </thead>
      <tbody>
        {{#each notices}}
          <tr>
            <td>
              <input type="checkbox" class="select" data-name= {{noticeId}}>
            </td>
            <td>{{noticeId}}</td>
            <td>{{noticeTitle}}</td>
            <td>{{state}}</td>
            <td>
              <a href="kindeditor?data={{noticeId}}">查看</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

  </div>
</div>
