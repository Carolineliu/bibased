{{!< default}}
{{#contentFor 'adminPageStyles'}}
  <link rel="stylesheet" href="../css/admin/news_manager.css">
  <script type="text/javascript" src="../js/admin/news_manager.js"></script>
{{/contentFor}}


<div class="newsManager">
  <div class="newsManagerHeader">
    <span>新闻管理</span>
  </div>

  <div class="newsTableHeader">
    <i class="icon-coffee"></i> 新闻列表
    <a href="#" class="tools delete">
      <i class="icon-trash "></i>删除
    </a>
    <a href="kindeditor" class="tools">
      <i class="icon-plus"></i>添加
    </a>
    <div class="tools settingNews">
      <a href="#" class="newsSetting" data-toggle="dropdown">
        <i class="icon-cogs"></i>设置
        <i class="icon-angle-down"></i>
      </a>
      <ul class="dropdown-menu pull-right">
        <li><a href="#" class="becomeHome"><i class="icon-cogs"></i> 设置成为首页</a></li>
        <li><a href="#" class="becomeNews"><i class="icon-cogs"></i> 设置成为新闻页</a></li>
      </ul>
    </div>
  </div>

  <div class="newsTableContent">
    <table>
      <thead>
        <tr>
          <th>
            <input type="checkbox" id="allSelect">
          </th>
          <th data-name="newsId">新闻编号</th>
          <th data-name="newsTitle">新闻标题</th>
          <th data-name="state">状态</th>
          <th data-name="newsContent">查看内容</th>
        </tr>
      </thead>
      <tbody>
        {{#each news}}
          <tr>
            <td>
              <input type="checkbox" class="select" data-name= {{newsId}}>
            </td>
            <td>{{newsId}}</td>
            <td>{{newsTitle}}</td>
            <td>{{state}}</td>
            <td>
              <a href="kindeditor?data={{newsId}}">查看</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
