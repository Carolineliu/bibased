{{!< ../layout/fontstage_layout}}
{{#contentFor 'pageStyles'}}
  <link rel="stylesheet" href="../css/user/register.css">
  <script type="text/javascript" src="../jquery/jquery.validate.js"></script>
  <script type="text/javascript" src="../js/user/register.js"></script>
{{/contentFor}}


<div class="register">
  <div class="registerHeader">
    <h2>注册</h2>
    <p>
      已有账号？<a href="login">登录</a>
    </p>
  </div>
  <form id="registerInfo" method="get" action="">
    <table class="registerContent">
      <tr>
        <td class="registerWord">新用户</td>
        <td>
          <input type="text" class="registerFill" id="userContent" name="username">
        </td>
      </tr>
      <tr>
        <td class="registerWord">密码</td>
        <td>
          <input type="password" class="registerFill" id="passwordContent" name="password">
        </td>
      </tr>
      <tr>
        <td class="registerWord">确认密码</td>
        <td>
          <input type="password" class="registerFill" id="confirmContent" name="confirmContent">
        </td>
      </tr>

      <tr>
        <td class="registerWord"> 姓名</td>
        <td>
          <input type="text" class="registerFill" id="nameContent" name="nameContent">
        </td>
      </tr>

      <tr>
        <td class="registerWord">性别</td>
        <td>
          <input type="radio" class="sex" name="gender" value="F" checked> 男
          <input type="radio" class="sex" name="gender" value="M"> 女
        </td>
      </tr>

      <tr>
        <td class="registerWord">邮箱</td>
        <td>
          <input type="text" class="registerFill" id="emailContent" name="email">
        </td>
      </tr>
      <tr>
        <td class="registerWord">联系电话</td>
        <td>
          <input type="text" class="registerFill" id="telContent" name="telContent">
        </td>
      </tr>
    </table>
    <div class="registerSubmit">
      <input type="submit" id="submit" value="提交">
    </div>
  </form>
</div>
