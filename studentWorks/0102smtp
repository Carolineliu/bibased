var nodemailer = require("nodemailer");
var user = '527974388@qq.com',
  pass = 'WyloveLxy110817';
var smtpTransport = nodemailer.createTransport("SMTP", {
  service: "QQ",
  auth: {
    user: user,
    pass: pass
  }
});

smtpTransport.sendMail({
  from: 'fruits<' + user + '>',
  to: '<fruitsugar1@outlook.com>',
  subject: 'Node.JS通过SMTP协议从QQ邮箱发送邮件',
  html: '这是一封测试邮件 <br> '
}, function(err, res) {
  console.log(err, res);
});
